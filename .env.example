# Homelab Infrastructure - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# Then copy docker-compose files to local/services/ and update secrets

# ===========================================
# REQUIRED: Your Domain
# ===========================================
DOMAIN=yourdomain.com

# ===========================================
# n8n Automation
# ===========================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# ===========================================
# Miniflux RSS Reader
# ===========================================
MINIFLUX_ADMIN_USERNAME=admin
MINIFLUX_ADMIN_PASSWORD=your_secure_password
MINIFLUX_DB_PASSWORD=your_db_password

# ===========================================
# Monica CRM (Generate key with: openssl rand -base64 32)
# ===========================================
MONICA_APP_KEY=base64:GENERATE_WITH_openssl_rand_-base64_32
MONICA_DB_PASSWORD=your_secure_password
MONICA_DB_ROOT_PASSWORD=your_secure_root_password

# ===========================================
# Timezone
# ===========================================
TZ=America/Chicago
